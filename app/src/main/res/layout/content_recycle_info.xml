<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/stdMargin1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.urgentx.recycledump.view.RecycleInfoActivity"
    tools:showIn="@layout/activity_recycle_info">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/stdMargin1"
        android:text="@string/please_describe_your_item" />

    <EditText
        android:id="@+id/recycleInfoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/item_name"
        android:inputType="textPersonName"
        android:layout_marginBottom="@dimen/stdMargin1"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/recycleInfoCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/stdMargin1"/>

    <EditText
        android:id="@+id/recycleInfoWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/weight_kg"
        android:inputType="number"
        android:layout_marginBottom="@dimen/stdMargin1"/>

    <EditText
        android:id="@+id/recycleInfoVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/volume_m_cubed"
        android:inputType="numberDecimal"
        android:layout_marginBottom="@dimen/stdMargin1"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/recycleInfoSaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_item"
        android:layout_gravity="right"
        />


</LinearLayout>
